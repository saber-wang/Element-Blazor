@inherits BComponentBase
@{
    var styles = new List<string>();
    if (Width > 0)
    {
        styles.Add($"width:{Width}px");
    }
    if (Height > 0)
    {
        styles.Add($"height:{Height}px");
    }
    if (Fit)
    {
        styles.Add("flex:1");
    }
    if (!string.IsNullOrWhiteSpace(Style))
    {
        styles.AddRange(Style.Split(';'));
    }
    <div class="blaz-layout" style="@string.Join(";", styles)" @ref="Container" @onkeydown="KeyDown" @onkeypress="KeyPress" @onkeyup="KeyUp">
        @if (North != null)
        {
            <div class="blaz-layout-north blaz-layout-card" style="line-height: @(SouthHeight)px;height:@(NorthHeight)px;@NorthStyle">
                @North
            </div>
        }
        <div class="blaz-layout-container" style="@layoutCssBuilder">
            @if (West != null)
            {
                <div class="blaz-layout-west blaz-layout-card" style="width:@(WestWidth)px;@WestStyle">
                    @West
                </div>
            }
            <div class="blaz-layout-center blaz-layout-card"  style="@(layoutCssBuilder);@CenterStyle">
                @if (Center != null)
                {
                    @Center
                }
            </div>
            @if (East != null)
            {
                <div class="blaz-layout-east blaz-layout-card " style="width:@(EastWidth)px;@EastStyle">
                    @East
                </div>
            }
        </div>

        @if (South != null)
        {
    <div class="blaz-layout-south blaz-layout-card" style="line-height: @(SouthHeight)px;height:@(SouthHeight)px;@SouthStyle">
        @South
    </div>
        }
    </div>
}
